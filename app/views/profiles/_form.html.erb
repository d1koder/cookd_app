<%= form_with model: profile, class: "nifty_form" do |f| %>
  <%= f.label "First Name" %>
  <%= f.text_field :first_name, required: true %>
  <br>
  <br>
  <%= f.label "Last Name" %>
  <%= f.text_field :last_name, required: true %>
  <br>
  <%= f.label "Home Address" %>
  <%= f.text_field :home_address, required: true %>
  <br>
  <%= f.label "Mobile Number" %>
  <%= f.text_field :mobile_number, required: true %>
  <br>
  <%= f.label "Picture" %>
  <%= f.file_field :picture, accept: "image/png, image/jpg, image/jpeg" %>
  <br>
  <%= f.submit %>
<% end %>