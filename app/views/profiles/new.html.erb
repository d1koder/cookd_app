<h1>New Profile</h1>

<%= form_with model: @profile, class: "nifty_form" do |f| %>
  <%= f.label "First Name" %>
  <%= f.text_field :first_name %>
  <br>
  <br>
  <%= f.label "Last Name" %>
  <%= f.text_field :last_name %>
  <br>
  <%= f.label "Home Address" %>
  <%= f.text_field :home_address %>
  <br>
  <%= f.label "Mobile Number" %>
  <%= f.text_field :mobile_number %>
  <br>
  <%= f.label "Picture" %>
  <%= f.file_field :picture, accept: "image/png, image/jpg, image/jpeg" %>
  <br>
  <%= f.submit "Create" %>
<% end %>